                                                                <div class="relative" @keydown.esc="showExportMenu=false">
                                                                    <button @click="showExportMenu = !showExportMenu" class="header-control flex items-center gap-1" :aria-expanded="showExportMenu ? 'true' : 'false'" aria-haspopup="menu">
